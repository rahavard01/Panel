APP_NAME="Panel"
APP_ENV=production
APP_KEY=base64:PZXk5vTuTinfeEVG5FpYv2l6WEhLsyvGpiWK7IgJJ60=
APP_DEBUG=false
APP_URL=https://YOUR_DOMAIN

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

# ===== Database (در زمان نصب روی سرور پر می‌کنی) =====
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=CHANGE_ME
DB_USERNAME=CHANGE_ME
DB_PASSWORD=CHANGE_ME

# ===== Core drivers =====
BROADCAST_DRIVER=log
CACHE_STORE=file
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ===== Mail (در زمان نصب روی سرور پر می‌کنی) =====
MAIL_MAILER=smtp
MAIL_HOST=CHANGE_ME
MAIL_PORT=465
MAIL_USERNAME=CHANGE_ME
MAIL_PASSWORD=CHANGE_ME
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS="noreply@YOUR_DOMAIN"
MAIL_FROM_NAME="Panel"

# ===== Telegram (در زمان نصب روی سرور پر می‌کنی) =====
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=

# ===== Frontend (Vite) =====
VITE_APP_NAME="${APP_NAME}"
# اگر فرانت و بک‌اند روی یک دامنه هستن: '/api'
# اگر جدا هستن، آدرس کامل بده مثل: "https://api.YOUR_DOMAIN"
VITE_API_BASE="/api"

# ===== CORS =====
CORS_ALLOWED_ORIGINS="http://localhost:5173"
CORS_ALLOWED_ORIGINS_PATTERNS=""
CORS_MAX_AGE=86400

# ===== Sanctum / Session =====
# دامنه‌هایی که اجازهٔ درخواست stateful دارن (برای dev):
SANCTUM_STATEFUL_DOMAINS=localhost:5173

# اگر فرانت و بک روی یک دامنه هستن، همین کافیه و می‌تونی SESSION_DOMAIN رو خالی بذاری.
# اگر زیر دامنه داری (مثلاً api.yourdomain.com و app.yourdomain.com) اینو بذار:
# SESSION_DOMAIN=.yourdomain.com
SESSION_DOMAIN=

# در dev: false — در پروڈاکشن: true (فقط https)
SESSION_SECURE_COOKIE=false

# اگر کوکی‌های cross-site ضروری شد (مثلاً فرانت و بک روی دامنه‌های متفاوت باشند)
# می‌تونی اینو None کنی؛ فعلاً لاگینت Bearer Token ـه، پس همون lax خوبه.
SESSION_SAME_SITE=lax
